<!DOCTYPE html>
<html lang="en">

<%- include('partials/head', { title: 'Carrito' }) %>

    <body>

        <%- include('partials/header') %>

            <main class="carrito_body_main">

                <div class="carrito_body-title">
                    <p class="cart_detail"><a href="/">home</a> <i class="fa-solid fa-chevron-right"></i> <a
                            href="#">carrito</a></p>
                    <h2 class="carrito_main_title">Carrito de compras</h2>
                </div>

                <div class="carrito_body-container">
                    <div class="carrito_body-1">
                        <div class="carrito_lista-de-pruductos">
                            <hr class="cart_hr">
                            <div class="cart_detail-container">
                                <img src="\images\leche-almendra.jpeg" alt="">
                                <div class="cart_detail-product">
                                    <h2>Leche de almendras</h2>
                                    <p>Lorem ipsum dolor sit amet consectetur, adipisicing elit.
                                    </p>
                                    <p class="cart_precio">$1.200</p>

                                    <div class="cart_quantity">
                                        <i class="fa-solid fa-minus"></i>
                                        <input class="cart_input-quantity" type="number" placeholder="1" value="1"
                                            min="1">
                                        <i class="fa-solid fa-plus"></i>
                                    </div>
                                </div>
                                <i class="fa-regular fa-circle-xmark delete-icon"></i>
                            </div>
                            <hr class="cart_hr">
                            <div class="carrito_lista-de-pruductos">
                                <div class="cart_detail-container">
                                    <img src="/images/miel-pura.jpeg" alt="">
                                    <div class="cart_detail-product">
                                        <h2>Miel pura</h2>
                                        <p>Lorem ipsum dolor sit amet consectetur, adipisicing elit.
                                        </p>
                                        <p class="cart_precio">$1.500</p>

                                        <div class="cart_quantity">
                                            <i class="fa-solid fa-minus"></i>
                                            <input class="cart_input-quantity" type="number" placeholder="1" value="1"
                                                min="1">
                                            <i class="fa-solid fa-plus"></i>
                                        </div>
                                    </div>
                                    <i class="fa-regular fa-circle-xmark delete-icon"></i>
                                </div>
                            </div>
                            <hr class="cart_hr">

                            <div class="cart_buttons">
                                <input type="text" name="text" id="tex" placeholder="Código de cupón">
                                <button class="aplication-product" type="submit">Aplicar cupón</button>
                                <button class="button-product" type="submit"><a href="/"><i
                                            class="fa-solid fa-arrow-left"></i> Seguir comprando</a></button>
                                <button class="quit-product" type="reset">Vaciar carro</button>

                            </div>
                        </div>
                    </div>

                    <!-- conviene mas ponerlo en una table con bootstrap o css -->

                    <div class="carrito_body-2">
                        <h2>Total del carrito</h2>
                        <div class="cart_subtotal-pie">
                            <p>Subtotal </p>
                            <p>$2.700</p>
                        </div>
                        <hr>
                        <div class="cart_subtotal-pie">
                            <h3>Envio</h3>
                            <div class="cart_detail-total">
                                <p>Introduce tu dirección para ver las opciones de envio</p>
                                <a href="#">Calcular envío <i class="fa-solid fa-truck"></i></a>
                            </div>
                        </div>
                        <hr>
                        <div class="cart_subtotal-pie">
                            <h3>Total</h3>
                            <p>$2.700</p>
                        </div>
                        <div class="button_finalizar">
                            <button type="submit"><a href="/">Finalizar compra</a></button>
                        </div>
                    </div>
                </div>
            </main>

            <%- include('partials/footer') %>
    </body>

</html>